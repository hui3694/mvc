@using mvc.ViewModels.SPA
@model MainViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Single Page Application</title>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <script>
        function OpenAddNew() {
            $.get("/spa/main/AddNew").then(
                function (r) {
                    $("<div id='DivCreateEmployee'></div>").html(r).
                        dialog({
                            width: 'auto', height: 'auto', model: true, title: 'Create New Employee',
                            close: function () {
                                $("#DivCreateEmployee").remove();
                            }
                        })
                }
            );
        }


    </script>
</head>
<body>
    <div style="text-align:right">
        Hello,@Model.UserName
        <a href="/Authentication/logout">Logout</a>
    </div>
    <hr />

    <div id="DivOption">
        @Html.Action("EmployeeList", "Main")
    </div>

    @Html.Partial("Footer",Model.FooterData)
</body>
</html>
